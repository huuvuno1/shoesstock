<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chitietgoiy1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:background="#ffffff"
            app:srcCompat="@drawable/img" />

        <ImageButton
            android:id="@+id/imageButton9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:backgroundTint="#ffffff"
            app:srcCompat="@drawable/img_31"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />
    </LinearLayout>

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="679dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="51dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:srcCompat="@drawable/img_22" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="24dp"
                    android:text="Tips phối đồ cùng Puma" />

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:backgroundTint="#ffffff"
                    app:srcCompat="@drawable/img_30"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="#1. ÁO CROPTOP + QUẦN ỐNG RỘNG + GIÀY PUMA" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vừa đơn giản lại vừa dễ áp dụng lại đúng chuẩn trendy nữa chứ. Dù là quần ống rộng jean cạp cao hay quần vải vẫn rất hợp cho set đồ này ." />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="370dp"
                android:layout_height="430dp"
                app:srcCompat="@drawable/img_24" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:text="#2. MIX ÁO HAI DÂY + QUẦN JEANS + GIÀY PUMA" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Với item quốc dân - quần jean thì nàng có thể phối cùng với bất kỳ trang phục nào cũng rất ăn ý đấy nhé. Chắc chắn rằng, quần jean là một item mà bất cứ cô nàng nào cũng nên có trong tủ đồ của mình. Sự kết hợp hoàn hảo giữa quần jean với giày Puma sẽ mang đến phong cách trẻ trung, năng động." />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="370dp"
                android:layout_height="430dp"
                app:srcCompat="@drawable/img_25" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:text="#2. MIX ÁO THUN + QUẦN JEANS + GIÀY PUMA" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Vào những ngày hơi se se lạnh thì nàng vẫn có thể diện quần jeans như thường. Với set đồ áo thun dài tay mix cùng quần jeans. Chỉ cần đi đôi giày Puma nữa là có ngay set đồ đơn giản nhưng vẫn rất chất. Nàng có thể khoác thêm bên ngoài áo denim." />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="380dp"
                android:layout_height="440dp"
                app:srcCompat="@drawable/img_26" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:text="#3. MIX ĐỒ THỂ THAO CÙNG VỚI GIÀY PUMA" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Phong cách phối đồ đen trắng, càng tăng thêm vẻ cool ngầu cho nàng. Vào những ngày mà nàng quá bí ý tưởng, chẳng biết mix match trang phục ra làm sao. Vậy thì cứ set đồ thể thao cùng giày Puma nhé. Vừa nhanh chóng lại vừa mang đến sự năng động, cá tính tràn đầy sức sống." />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="370dp"
                android:layout_height="430dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/img_27" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginBottom="10dp"
                android:text="#4. MIX CHÂN VÁY/ VÁY LIỀN CÙNG VỚI GIÀY PUMA" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Từ chiếc váy ngắn năng động cho đến váy xòe nhẹ nhàng hay váy dài dáng suông ngọt ngào,... đều kết hợp cực ăn ý cùng với giày Puma." />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="370dp"
                android:layout_height="430dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/img_28" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Nếu theo đuổi phong cách dễ thương thì nàng hãy mix quần yếm/váy yếm cùng với giày Puma nhé. Hoặc nhẹ nhàng, dịu dàng như nàng thơ với váy liền phối cùng giày Puma. Dù là theo phong cách nào thì giày Puma vẫn chơi nhiệt tình hết." />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="370dp"
                android:layout_height="430dp"
                app:srcCompat="@drawable/img_29" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_marginLeft="100dp"
                android:layout_marginBottom="20dp"
                android:text="Còn nhiều tips phối đang chờ bạn đón xem" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

