<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/muiten"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back" />
        <TextView
            android:id="@+id/tvdangky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Đăng ký"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvHoten"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:text="Họ tên"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/ethoten"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ems="20"
            android:background="@drawable/botron"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/tvSdt"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Số điện thoại"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/etSdt"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ems="20"
            android:background="@drawable/botron"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/etemail"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ems="20"
            android:background="@drawable/botron"

            android:minHeight="48dp" />

        <TextView
            android:id="@+id/tvMatkhau"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Mật khẩu"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ems="20"
            android:background="@drawable/botron"
            android:inputType="textPassword"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/tvNhaplaimk"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="Nhập lại mật khẩu"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/etRepassword"
            android:layout_width="388dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:ems="20"
            android:background="@drawable/botron"
            android:hint="Nhập lại mật khẩu"
            android:inputType="textPassword"
            android:minHeight="48dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutLogin"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="388dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:backgroundTint="#5363F4"
            android:text="Đăng ký"
            android:textAllCaps="false"
            android:textSize="18dp"
            android:textStyle="bold"/>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/layoutOR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutLogin"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="110dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/or"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hoặc đăng ký với"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutgg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutLogin"
        android:layout_marginTop="140dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/fb"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/gg"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:src="@drawable/google" />

        <ImageView
            android:id="@+id/ig"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:src="@drawable/instagram" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutdky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutLogin"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/dangky"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:layout_weight="1"
            android:text="Bạn đã có tài khoản?"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dky"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đăng nhập"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>