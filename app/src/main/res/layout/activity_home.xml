<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:contextClickable="false"
    android:textAlignment="textEnd">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="51dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img" />

    <FrameLayout
        android:id="@+id/Timkiem"
        android:layout_width="209dp"
        android:layout_height="36dp"
        android:background="@drawable/bovien"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/btnGiohang"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:layout_marginLeft="7dp"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_search_black_24dp" />
        <EditText
            android:id="@+id/textSearch"
            android:hint="Search"
            android:textSize="15dp"
            android:inputType="text"
            android:imeOptions="actionSearch"
            android:background="@android:color/transparent"
            android:layout_marginLeft="35dp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <ImageButton
        android:id="@+id/btnBoloc"
        android:layout_width="35dp"
        android:layout_height="44dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/a23" />

    <ImageButton
        android:id="@+id/btnGiohang"
        android:layout_width="33dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_2" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="372dp"
        android:layout_height="79dp"
        android:layout_marginTop="73dp"
        android:background="@drawable/bovien"
        android:backgroundTint="#7E5363F4"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="15dp"
                android:text="Giảm giá"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="30%"
                android:textColor="#ffffff"
                android:textSize="27dp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="210dp"
            android:layout_height="169dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:rotation="-5"
            app:srcCompat="@drawable/img_3" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:background="@drawable/a20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="368dp"
        android:layout_height="40dp"
        android:layout_marginTop="185dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnGoiy"
                    android:layout_width="145dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#f6f6f6"
                    android:text="Gợi ý cho bạn"
                    android:textAllCaps="false"
                    android:textColor="#5363f4" />

                <ImageButton
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_marginTop="-6dp"
                    android:layout_marginLeft="-10dp"
                    android:background="@drawable/ic_sharp_star_24"/>

           </LinearLayout>


            <Button
                android:id="@+id/btnNike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:backgroundTint="#f6f6f6"
                android:text="Nike"
                android:textAllCaps="false"
                android:textColor="#5363f4" />

            <Button
                android:id="@+id/btnAdidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#f6f6f6"
                android:text="Adidas"
                android:textAllCaps="false"
                android:textColor="#5363f4" />

            <Button
                android:id="@+id/btnPuma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#f6f6f6"
                android:text="Puma"
                android:textAllCaps="false"
                android:textColor="#5363f4" />

            <Button
                android:id="@+id/btnBata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#f6f6f6"
                android:text="Bata"
                android:textAllCaps="false"
                android:textColor="#5363f4" />

            <Button
                android:id="@+id/btnLotto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#f6f6f6"
                android:text="Lotto"
                android:textAllCaps="false"
                android:textColor="#5363f4" />
        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:id="@+id/wrap_intro_product"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="372dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sản phẩm mới"
                    android:textColor="#2e2e2e"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtXemNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Xem thêm >" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewHotProducts"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_height="wrap_content" >

            </androidx.recyclerview.widget.RecyclerView>



            <LinearLayout
                android:layout_width="372dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sản phẩm khuyến mãi"
                    android:textColor="#2e2e2e"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtXemKM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Xem thêm >" />
            </LinearLayout>



            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:id="@+id/RecyclerViewSaleProducts"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_height="wrap_content" >

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="372dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sản phẩm phổ biến"
                    android:textColor="#2e2e2e"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtXemPB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Xem thêm >" />
            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:id="@+id/RecyclerViewPopularProduct"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                >

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/wrap_specific_type"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewSpecificType"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:visibility="gone"
            android:layout_marginHorizontal="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_height="wrap_content" >

        </androidx.recyclerview.widget.RecyclerView>
    </ScrollView>

    <ScrollView
        android:id="@+id/wrap_goi_y"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewGoiY"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp"
            android:visibility="gone"
            android:layout_marginHorizontal="10dp"
            android:layout_height="wrap_content" >

        </androidx.recyclerview.widget.RecyclerView>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>